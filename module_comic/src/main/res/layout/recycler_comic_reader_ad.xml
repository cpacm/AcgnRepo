<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/comic_chapter_finish"
            android:textColor="@color/white"
            android:textSize="@dimen/text_title" />

        <TextView
            android:id="@+id/adButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/line_length_double"
            android:background="@drawable/comic_finish_background"
            android:text="@string/comic_chapter_finish_btn"
            android:textColor="@color/white"
            android:textSize="@dimen/text_subhead" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>