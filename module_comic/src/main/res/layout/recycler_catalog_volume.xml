<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/line_length"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/volumeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxWidth="160dp"
        android:maxLines="1"
        android:textColor="@color/white_normal"
        android:textSize="@dimen/text_body"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="卷名" />

    <View
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginEnd="@dimen/line_length"
        android:background="@drawable/comic_volume_dot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/volumeTv"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginStart="@dimen/line_length"
        android:background="@drawable/comic_volume_dot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/volumeTv"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>